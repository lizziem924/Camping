<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCampoutActivity">

  <TextView
      android:id="@+id/question1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="8dp"
      android:text="Enter in a name for your campout:"
      />

  <EditText
      android:id="@+id/answer1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/question1"
      android:padding="8dp"
      android:layout_marginBottom="8dp"
      android:inputType="text"
      />

  <TextView
      android:id="@+id/question2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/answer1"
      android:padding="8dp"
      android:text="What is the total fee for camping? ($)"
      />

  <EditText
      android:id="@+id/answer2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/question2"
      android:padding="8dp"
      android:layout_marginBottom="8dp"
      android:inputType="numberDecimal"
      />

  <TextView
      android:id="@+id/question3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/answer2"
      android:padding="8dp"
      android:text="How far away is the camp? (in miles)"
      />

  <EditText
      android:id="@+id/answer3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/question3"
      android:padding="8dp"
      android:layout_marginBottom="8dp"
      android:inputType="number"
      />

  <TextView
      android:id="@+id/question4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/answer3"
      android:padding="8dp"
      android:text="How many miles per gallon does the car get?"
      />

  <EditText
      android:id="@+id/answer4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/question4"
      android:padding="8dp"
      android:layout_marginBottom="8dp"
      android:inputType="number"
      />

  <TextView
      android:id="@+id/question5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/answer4"
      android:padding="8dp"
      android:text="What is the average price of gas in the area?"
      />

  <EditText
      android:id="@+id/answer5"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/question5"
      android:padding="8dp"
      android:layout_marginBottom="8dp"
      android:inputType="numberDecimal"
      />

  <Button
      android:id="@+id/back_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="back"
      android:layout_alignParentBottom="true"
      android:onClick="goBack"
    />

  <Button
      android:id="@+id/next_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="next"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:onClick="goNext"
    />

  </RelativeLayout>